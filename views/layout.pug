doctype html
html
	head
		block title
			title #{title}
		link(rel="stylesheet" type="text/css" href="/styles.css")
	body
		div(class="top-bar")
			span(class="top-bar-item" id="home-link")
				a(href="/") Home
			if user
				span(class="top-bar-item")
					| Hello, 
					a(href="/profile") #{user}
				span(class="top-bar-item")
					a(href="/create") New Poll
				span(class="top-bar-item")
					a(href="/logout") Log Out
			else
				span(class="top-bar-item")
					a(href="/login") Log In
				span(class="top-bar-item")
					a(href="/Register") Register
		div
			block content
		script(src="/scripts.js" type="text/javascript")
