doctype html
html
	head
		block title
			title #{title}
	body
		div(class="top-bar")
			if user
				span(class="top-bar-item")
					| Hello, #{user}
				span(class="top-bar-item")
					a(href="/logout") Log Out
			else
				span(class="top-bar-item")
					a(href="/login") Log In
				span(class="top-bar-item")
					a(href="/Register") Register
		div
			block content
		script(src="scripts.js" type="text/javascript")
